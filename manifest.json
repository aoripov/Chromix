{
  "manifest_version": 2,

  "name": "Chromix",
  "description": "This extension got me a Bloomberg internship.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.min.js", "bootstrap.min.js", "dialog.js"]
    }
  ]
}
